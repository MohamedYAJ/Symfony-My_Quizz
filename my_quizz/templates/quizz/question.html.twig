{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Question {{ numero }}{% endblock %}

{% block body %}
    <div class="flex flex-col items-center mt-[75px]">

        <h1 class="text-3xl font-bold mb-5 text-blue-600">{{ category.name }} Quiz</h1>

        <form method="POST" class="w-full max-w-xl bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-6">
                <p class="text-2xl font-bold text-center text-gray-800 mb-10">{{ question.question }}</p>
                    <p>{{ numero }}  / {{ total }}<p/>
                {% for reponse in question.reponses|shuffle %}
                    <div class="mb-4">
                        <label class="inline-flex items-center text-lg font-medium text-gray-700">
                            <input type="radio" name="answer" value="{{ reponse.id }}" required
                                   class="form-radio text-blue-600 h-5 w-5 mr-3">
                            {{ reponse.reponse }}
                        </label>
                    </div>
                {% endfor %}
            </div>

            <div class="flex justify-center">
                <button type="submit" class="bg-blue-500 text-white font-bold py-3 px-10 rounded-full hover:bg-blue-700 transition duration-200">
                    {{ numero == total ? 'Voir les r√©sultats' : 'Suivant' }}
                </button>
            </div>
        </form>

    </div>
{% endblock %}
