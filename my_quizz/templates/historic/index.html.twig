{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}

<div class="flex flex-col items-center w-full">
       <div class="bg-gray-200 mt-10 w-1/3 p-5 rounded-xl mb-10">
        <h1 class="text-3xl font-bold mb-5 text-blue-600 text-center">Quiz History</h1>
        {% if quizz_attempts is defined and quizz_attempts|length > 0 %}
            <ul class="space-y-3">
                {% for attempt in  quizz_attempts %}
                    <li class="border-b border-gray-300 pb-2 mb-2">
                        <p><strong>Quizz:</strong> {{ attempt.categoryName | default('N/A') }}</p>
                        <p><strong>Score:</strong> {{ attempt.score }} / {{ attempt.totalQuestions }}</p>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>No quiz played yet.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
