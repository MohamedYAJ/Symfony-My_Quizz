    <h1 class="text-3xl font-bold mb-5 text-blue-600 mt-[75px]">{{ category.name }} Quiz</h1>

    {% if questions is not empty %}
        <ul>
            {# {% for question in questions %}
                <div class="flex justify-center mb-8"> <p class="text-2xl font-bold mt-[100px]">{{ question.question }}</p></div>
                <div class="flex justify-center">
                <ul class="mt-[60px]">

                    {% for reponse in question.reponses %}
                        <li class="m-6 font-semibold text-lg">
