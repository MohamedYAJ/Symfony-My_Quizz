{% extends 'base.html.twig' %}

{% block title %}Créer un utilisateur{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 flex">
    {% include 'admin/_adminnav.html.twig' %}

    <main class="flex-1 p-10 ml-72">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Créer un utilisateur</h1>

        <div class="bg-white shadow-md rounded-lg p-6 max-w-md">
            {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.plainPassword) }}
                    {{ form_widget(form.plainPassword, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
                </div>

                <div class="mb-4 flex items-center">
                    {{ form_widget(form.isAdmin) }}
                    {{ form_label(form.isAdmin, null, {'label_attr': {'class': 'ml-2'}}) }}
                </div>

                <button type="submit" class="bg-blue-500 text-white font-bold py-2 px-6 rounded hover:bg-blue-600 transition">
                    Créer l’utilisateur
                </button>
            {{ form_end(form) }}
        </div>
    </main>
</div>
{% endblock %}
